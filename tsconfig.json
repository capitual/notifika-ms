{
    "compilerOptions": {
      "baseUrl": "src",
      "target": "es2020", // as per https://node.green/ v14 fully supports es2020
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "outDir": "build",
      "rootDir": "./src",
      "pretty": true,
      "noEmitOnError": false,
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "removeComments": true,
      "newLine": "lf",
      "noUnusedLocals": true,
      "noFallthroughCasesInSwitch": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "lib": [
        "esnext",
      ],
      "typeRoots": [
        "node_modules/@types",
        "src/typings"
      ],
      "paths": {
        "~/*": [
          "./*"
        ]
      }
    }
  }
  